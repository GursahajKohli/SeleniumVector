[DEFAULT]
company_name = Scotiabank
## For now, scrape only internships
# TODO: add scraping for other jobs as well
url = https://jobs.scotiabank.com/search/?createNewAlert=false&q=analytics+AND+Internship&locationsearch=ON%%2C+CA

# Job list fields
joblist.link.xpath = //td/span[contains(@class, "jobTitle")]/a
joblist.nextpage.css = ul.pagination a[title="Page $PAGENUMBER"]
joblist.pagination = PAGENUMBER

# Job details fields
jobdetails.title.xpath = //div[@class="job"]//h1/span[@itemprop="title"]/text()
# select the substring after the text "Location(s):"
jobdetails.location.xpath = substring-after(//p/span/span[contains(text(), "Location(s)")]/text(), "Location(s):")
jobdetails.description.xpath = //div[@class="job"]/div[contains(@class, "joblayouttoken")][2]
jobdetails.is_url_application = True
jobdetails.logo = https://talenthub.vectorinstitute.ai/uploads/employer/logo/294573/S_White_on_red_HEX__Square_.jpg