[DEFAULT]
company_name = BMO
url = https://jobs.bmo.com/ca/en/c/technology-jobs

# Job list fields
joblist.link.xpath = //div[contains(@class, "job-title")]/..
joblist.css = a.linkEle
joblist.pagination = PAGENUMBER
joblist.nextpage.css = ul.pagination a[aria-label = "Page $PAGENUMBER"]

# Job details fields
jobdetails.title.xpath = //h1[@class="job-title"]/text()
jobdetails.location.xpath = //span[contains(@class, "job-location")]/text()
jobdetails.description.xpath = //div[@class = "jd-info au-target"]
jobdetails.is_url_application = True
jobdetails.logo = https://talenthub.vectorinstitute.ai/uploads/employer/logo/294961/BMO-MB_T2_E.png
