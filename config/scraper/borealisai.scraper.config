[DEFAULT]
company_name = Borealis AI
url = https://www.borealisai.com/en/careers/employment/

# Job list fields
joblist.link.xpath = //div[@class="job-listing__item"]/a
joblist.pagination = NONE

# Job details fields
jobdetails.title.xpath = //div[@class="page-header__title"]/h1/text()
jobdetails.location.xpath = substring-after(//p[@class="title" and contains(text(), "Location:")]/text(), "Location:")
## Note: select all sections with class="section section--no-divider" AND not containing an apply link child (<a>)
jobdetails.description.xpath = //div[@class="container"]//section[@class="section section--no-divider" and not(.//a[text()="Apply"])]
jobdetails.is_url_application = False
jobdetails.application_email = mi.research@borealisai.com
jobdetails.logo = https://talenthub.vectorinstitute.ai/uploads/employer/logo/340845/Borealis_AI_Promo_Vertical_Blue.png